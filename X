<div class="developer">Developed by Aryan Verma</div>

<script>
    function calculatePercentage() {
        const name = document.getElementById('name').value;
        const overallNumber = parseInt(document.getElementById('overallNumber').value);
        const percentage = (overallNumber / 500) * 100;

        let message;
        if (percentage < 60) {
            message = `<span style="color: #d9534f;">Fail</span><br>No matter If You Fail, Fail Again, Fail Better, You Can Do`;
        } else if (percentage >= 60 && percentage <= 70) {
            message = `<span class="good-rank">Good - Second Division</span>`;
        } else if (percentage > 70 && percentage < 90) {
            message = `<span class="good-rank">Excellent - First Honors</span>`;
        } else {
            message = `<span class="good-rank">Legend - Fabulous!</span>`;
            document.getElementById('celebration').style.display = 'block';
        }

        document.getElementById('resultMessage').innerHTML = `${name}, you scored ${percentage.toFixed(2)}%. ${message}`;
        document.getElementById('popup').style.display = 'block';
    }

    function checkAnotherResult() {
        document.getElementById('popup').style.display = 'none';
        document.getElementById('celebration').style.display = 'none';
        document.getElementById('name').value = '';
        document.getElementById('overallNumber').value = '';
    }

    function goHome() {
        document.getElementById('popup').style.display = 'none';
        document.getElementById('celebration').style.display = 'none';
    }

    function exit() {
        window.close();
    }
</script>

</body>
