<body>

<div class="calculator">
    <div class="calculator-heading">Percentage Calculator B/w 500</div>
    <label for="name">Enter Your Name:</label>
    <input type="text" id="name" required><br>
    <label for="overallNumber">Overall Number:</label>
    <input type="number" id="overallNumber" min="0" max="500" required><br>
    <button onclick="calculatePercentage()">Calculate</button>
</div>

<div class="popup" id="popup">
    <h2>Result</h2>
    <p id="resultMessage" class="result"></p>
    <button onclick="checkAnotherResult()">Check Another Result</button>
    <button onclick="goHome()">Home</button>
    <button onclick="exit()">Exit</button>
</div>

<div class="celebration" id="celebration">
    <div class="balloon" style="top: 20%; left: 10%;"></div>
    <div class="balloon" style="top: 30%; left: 20%;"></div>
    <div class="balloon" style="top: 40%; left: 30%;"></div>
    <div class="balloon" style="top: 50%; left: 40%;"></div>
    <div class="balloon" style="top: 60%; left: 50%;"></div>
    <div class="balloon" style="top: 70%; left: 60%;"></div>
    <div class="balloon" style="top: 80%; left: 70%;"></div>
